@model IEnumerable<ENTITY_L.Models.Category.CategoryModel>

@{
    Layout = null;
    List<ENTITY_L.Models.Category.CategoryModel> categories = (List<ENTITY_L.Models.Category.CategoryModel>)ViewBag.AllCategory;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LoadCategoryAsync</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in categories) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Editar", "EditCategory", new { id=item.Id }) |
                @Html.ActionLink("Delete", "DeleteCategory", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
