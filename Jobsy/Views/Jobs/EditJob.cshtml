@model ENTITY_L.Models.Jobs.JobsModel

@{
    Layout = null;
    ENTITY_L.Models.Jobs.JobsModel job = (ENTITY_L.Models.Jobs.JobsModel)ViewBag.ajob;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditJob</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    
    
    @using (Html.BeginForm("Edit","Jobs", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4></h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
    
            <div class="form-group">
                <div class="col-md-10">
                    <label class="control-label col-md-2">Company</label>
                    <input class="form-control" name="Company" value= @job.Company />
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-10">
                    <label class="control-label col-md-2">Email</label>
                    <input class="form-control" name="Email" value=@job.Email />
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-10">
                    <label class="control-label col-md-2">Job Type</label>
                    <input class="form-control" name="JobType" value=@job.JobType />
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-10">
                    <label class="control-label col-md-2">Logo</label>
                    <input class="form-control" name="Logo" value=@job.Logo />
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-10">
                    <label class="control-label col-md-2">URL</label>
                    <input class="form-control" name="URL" value=@job.URL />
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-10">
                    <label class="control-label col-md-2">Job</label>
                    <input class="form-control" name="Job" value=@job.Job />
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-10">
                    <label class="control-label col-md-2">Location</label>
                    <input class="form-control" name="Location" value=@job.Location />
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-10">
                    <label class="control-label col-md-2">Category</label>
                    <input class="form-control" name="Category" value=@job.Category />
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-10">
                    <label class="control-label col-md-2">Job Description</label>
                    <input class="form-control" name="JobDescription" value=@job.JobDescription />
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-10">
                    <label class="control-label col-md-2">Requirements</label>
                    <input class="form-control" name="Requirements" value=@job.Requirements />
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
