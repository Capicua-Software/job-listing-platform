@{ 

}

<style>
    .navbar-user-text {
        color: var(--primary-color);
        font-family: var(--navbar-font);
        font-weight: var(--font-bold);
        text-transform: initial;
    }

    .dropdown-user-text {
        font-family: var(--navbar-font);
        font-weight: var(--font-semi-bold);
        text-transform: initial;
    }
</style>


<span class="navbar-user-text" style="margin-right: 2rem;">@ViewBag.Name</span>

<div class="btn-group mb-2" style="border-radius: 20px;margin-top:.5%;">


    <!-- Avatar -->
    <a class="dropdown-toggle hidden-arrow"
       href="#"
       role="button"
       data-mdb-toggle="dropdown"
       data-mdb-display="static"
       aria-expanded="false">
        <img src="https://mdbootstrap.com/img/new/avatars/2.jpg"
             class="rounded-circle"
             height="35"
             alt=""
             loading="lazy" />
    </a>

    <ul class="dropdown-menu dropdown-menu-end">

        <li align="center" style="margin-top: 4%;"><span class="dropdown-user-text" >@ViewBag.Role</span></li>
        <li><hr class="dropdown-divider" /></li>
        <li><a class="dropdown-item" href="@Url.Action("")">Ir al Dashboard</a></li>
        <li><a class="dropdown-item" href="#">Empleos</a></li>
        <li><hr class="dropdown-divider" /></li>
        <li>
            <a class="dropdown-item" href="@Url.Action("LogOff", "Auth")">
                <i class="fas fa-sign-out-alt"></i>
                Cerrar sesión
            </a>
        </li>
    </ul>


</div>