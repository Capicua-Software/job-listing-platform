@model ENTITY_L.Models.Authentication.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/IndexShared/_IndexNavbar.cshtml";
}

<body onload="hideButtons()">

    <!-- Background image -->
    <div class="bg-image "
         style="background-image: url('https://www.mediafire.com/convkey/8ef1/irtrm9kc2r9hgxb9g.jpg'); height: 100vh ">

        <div class="container col-md-6"  style="margin-top:3rem;">
            <!-- Pills navs -->
           
            <!-- Pills navs -->
            <!-- Pills content -->

            @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "d-flex justify-content-center" }))
            {             

                

                <div  class="tab-content shadow p-5 bg-white " style="border-radius:20px;width:60%; margin-top: 6rem;">
                    <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                       <div class="d-flex justify-content-center">
                       <img style="margin-bottom:40px;" height="80px" src="~/Content/Index/Logo.svg">
                        </div>
                       <form>


                           @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                           <!-- Email input -->
                           @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                           <div class="form-outline mb-4">
                               <input type="email" id="loginName" name="Email" class="form-control" />
                               <label class="form-label" for="loginName">Correo electrónico</label>
                           </div>

                           <!-- Password input -->
                           @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                           <div class="form-outline mb-4">
                               <input type="password" id="loginPassword" name="Password" class="form-control" />
                               <label class="form-label" for="loginPassword">Contraseña</label>
                           </div>

                           <!-- 2 column grid layout -->
                           <div class="row mb-4">
                               <div class="col-md-6 d-flex justify-content-center">
                                   <!-- Checkbox -->
                                   <div class="form-check mb-3 mb-md-0">
                                       <style>
                                           .form-check-input[type=checkbox]:checked {
                                               background-image: none;
                                               background-color: #442B6F;
                                           }

                                               .form-check-input[type=checkbox]:checked:focus {
                                                   background-image: none;
                                                   background-color: #442B6F;
                                               }

                                           .form-control:focus {
                                               -webkit-box-shadow: none;
                                               box-shadow: none;
                                               border-color: #442B6F;
                                               -webkit-box-shadow: inset 0 0 0 1px #442B6F;
                                               box-shadow: inset 0 0 0 1px #442B6F;
                                           }
                                       </style>


                                       <input class="form-check-input" style="border-radius:5px;border-color:#442B6F" type="checkbox" value="" id="loginCheck" checked />
                                       <label style="color: #757575;font-family:Raleway;" class="form-check-label" for="loginCheck"> Recordarme </label>
                                   </div>
                               </div>

                               <div class="col-md-6 d-flex justify-content-center">
                                   <!-- Simple link -->
                                   <a href="#!" class="Subtitle" style="color: #4376DA">¿Olvidaste tu contraseña?</a>
                               </div>
                           </div>

                           <!-- Submit button -->
                           <button type="submit" class="btn btn-primary btn-block mb-4" style="background-color: #933368;font-family: Raleway;font-size:15px">Iniciar Sesión</button>

                           <!-- Register buttons -->
                           <div class="text-center" style="margin-top:50px">
                               <p class="Subtitle" style="color: #757575">¿No tienes cuenta? <a style="color: #4376DA" href="#!">Registrate</a></p>
                           </div>
                           <div class="text-center mb-3">
                               <p class="Subtitle">O inicia sesión con:</p>

                               <button type="button" style="background-color:#D85543;" class="btn btn-primary btn-floating mx-1">
                                   <i class="fab fa-google"></i>
                               </button>

                               <button type="button" class="btn btn-black btn-floating mx-1">
                                   <i class="fab fa-github" style="font-size:20px"></i>
                               </button>
                           </div>
                       </form>
                    </div>
                </div>
                <!-- Pills content -->
            }
        </div>

    </div>

</body>